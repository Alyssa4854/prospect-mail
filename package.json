{
  "name": "prospect-mail",
  "productName": "prospect-mail",
  "version": "0.1.0",
  "description": "Prospect Mail is an Outlook Electron desktop application for the new design",
  "engines": {
    "node": ">=10.13.0",
    "yarn": ">=1.12.1"
  },
  "main": "src/main.js",
  "author": "Julian Alarcon <alarconj@gmail.com>",
  "repository": "https://github.com/julian-alarcon/prospect-mail",
  "license": "MIT",
  "keywords": [
    "Electron",
    "Outlook",
    "Microsoft",
    "Outlook Desktop",
    "Prospect"
  ],
  "scripts": {
    "start": "electron src/main.js",
    "pack": "electron-builder --dir",
    "dist:linux": "electron-builder --linux",
    "dist:linux:appimage": "electron-builder --linux AppImage",
    "dist:linux:snap": "electron-builder --linux snap",
    "dist:macOS": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "publish": "build -p always"
  },
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "^20.28.4"
  },
  "dependencies": {
    "electron-settings": "^3.2.0"
  },
  "build": {
    "appId": "io.github.prospect.${name}",
    "linux": {
      "category": "Office",
      "desktop": {
        "StartupWMClass": "prospect-mail"
      },
      "target": [
        "AppImage",
        "deb",
        "snap"
      ]
    },
    "snap": {
      "synopsis": "Prospect Mail is an Outlook Electron desktop application for the new design",
      "confinement": "strict",
      "grade": "devel",
      "buildPackages": [],
      "stagePackages": [
        "default"
      ],
      "plugs": [
        "default"
      ]
    },
    "win": {
      "target":"msi"
    }
  }
}
